modules = ["python-3.11", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "glibcLocales", "libiconv", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Excel Analysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production Server"

[[workflows.workflow]]
name = "Excel Analysis"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 analyze_excel.py"

[[workflows.workflow]]
name = "Dev Server"
author = 36826097
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd react-app && npm run dev"

[[workflows.workflow]]
name = "Production Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node production_server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "bash deploy.sh"]
deploymentTarget = "cloudrun"

