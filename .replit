[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Full App"

[[workflows.workflow]]
name = "Full App"
author = "agent"

[workflows.workflow.metadata]
