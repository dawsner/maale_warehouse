modules = ["python-3.11", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Production App"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd react-app && PORT=5100 node server/server.js"
waitForPort = 5100

[[workflows.workflow]]
name = "Production App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd react-app && PYTHON_CMD=python3 PORT=5000 NODE_ENV=production node server/server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd react-app && NODE_ENV=production PORT=5000 node server/server.js"]
build = ["sh", "-c", "cd react-app && npm install && npm run build"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 5100
externalPort = 3001
