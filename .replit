modules = ["python-3.11", "nodejs-20", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "glibcLocales", "libiconv", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Excel Analysis"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Full App"

[[workflows.workflow]]
name = "Excel Analysis"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 analyze_excel.py"

[[workflows.workflow]]
name = "Full App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd react-app && npm run dev"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "streamlit run main.py --server.port=5000 --server.enableXsrfProtection=false"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 5100
externalPort = 3001
